@model PagedList.IPagedList<ContactBook.ServiceReference.Contacts>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "WCF приложение";
}

<h2>Адресная книга 1.2 alpha version</h2>


<table class="table table-hover">
    <tr>
        <th>
            Идентификатор
        </th>
        <th>
            Электронная почта
        </th>
        <th>
            ФИО
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)

            </td>
            <td>
                @Html.ActionLink("Удалить", "DeleteContact", new { id = item.Id }, new { @class = "btn btn-default" })
            </td>
        </tr>
    }

</table>
<div class="text-center">
    <p>
        <a href="/Home/CreateContact" class="btn btn-primary">Новый контакт</a>
    </p>
</div>
<br />
Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))